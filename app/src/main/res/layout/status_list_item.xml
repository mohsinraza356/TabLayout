<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/statusImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile"
        app:shapeAppearanceOverlay="@style/CircularImageView"
        />
    <TextView
        android:layout_marginTop="2dp"
        android:layout_marginStart="15dp"
        android:id="@+id/uploaderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/statusImage"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/harry_styles"
        android:textStyle="bold"
        android:textSize="18sp"
        />
    <TextView
        android:layout_marginBottom="2dp"
        android:layout_marginStart="15dp"
        android:id="@+id/statusTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/statusImage"
        app:layout_constraintTop_toBottomOf="@id/uploaderName"
        android:text="@string/_59_minutes_ago"
        android:textSize="14sp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>